<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dlzc_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_section_title"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/ll_section_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="15px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="15px">

            <ImageView
                android:id="@+id/iv_section_title_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/back_img" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_section_title_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxEms="9"
            android:singleLine="true"
            android:text="登录"
            android:textColor="#333333"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/ll_section_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_section_title_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textColor="#333333"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="55dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_email_tv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/dlzc_user_icon" />


            <EditText
                android:id="@+id/login_username_et"
                style="@style/Account.EditText"
                android:background="@color/transparent"
                android:hint="请输入手机号"
                android:singleLine="true" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="23dp"
            android:background="#333333" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="23dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_pw_tv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/dlzc_psw_icon" />

            <EditText
                android:id="@+id/login_pw_et"
                style="@style/Account.EditText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:ems="10"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:singleLine="true" />


            <ImageButton
                android:id="@+id/login_show_pwd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:background="@drawable/dlzc_bks_icon" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="23dp"
            android:background="#333333" />

    </LinearLayout>

    <Button
        android:id="@+id/login_login_btn"
        style="?buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="25dp"
        android:background="@drawable/btn_bg"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="21sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <TextView
            android:id="@+id/danymic_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机动态码登录"
            android:textColor="#999999"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/froget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="忘记密码"
            android:textColor="#197fee"
            android:textSize="15sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/account_login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <View
                android:id="@+id/line_left"
                android:layout_width="75dp"
                android:layout_height="1px"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="23dp"
                android:background="#333333" />

            <TextView
                android:id="@+id/account_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/line_left"
                android:text="第三方账号登录"
                android:textColor="#999999"
                android:textSize="15sp" />

            <View
                android:id="@+id/line_right"
                android:layout_width="75dp"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="23dp"
                android:layout_toRightOf="@+id/account_login"
                android:background="#333333" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/login_sina"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="27.5dp"
                android:background="@drawable/disanfang_weibo_icon"
                android:onClick="onAuthClick" />

            <ImageView
                android:id="@+id/login_wechat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/disanfang_weixin_icon"
                android:onClick="onAuthClick" />

            <ImageView
                android:id="@+id/login_qq"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="27.5dp"
                android:background="@drawable/disanfang_qq_icon"
                android:onClick="onAuthClick" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>