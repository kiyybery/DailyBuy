<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/section_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.5dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_email_tv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/zhmm_sjh_icon" />


        <EditText
            android:id="@+id/login_username_et"
            style="@style/Account.EditText"
            android:background="@color/transparent"
            android:hint="请输入手机号"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_pw_tv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/dlzc_yzm_icon" />

        <EditText
            android:id="@+id/login_pw_et"
            style="@style/Account.EditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:ems="10"
            android:hint="请输入验证码"
            android:inputType="textPassword"
            android:singleLine="true" />


        <Button
            android:id="@+id/account_register_get_code_btn"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_normal_drak"
            android:padding="5dp"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/next_btn"
        style="?buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="25dp"
        android:background="@drawable/btn_bg"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="21sp" />

</LinearLayout>