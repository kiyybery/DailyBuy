<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/section_title" />

    <include layout="@layout/divider_thick" />

    <RelativeLayout
        android:id="@+id/add_address_name_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/yr_background_main">

        <LinearLayout
            android:id="@+id/add_address_name_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/add_address_name_tv"
                style="@style/MyProfile.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="收货人姓名"
                android:textColor="#333333"
                android:textSize="16sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/add_address_name_ed"
            style="@style/MyProfile.Text"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="2.5dp"
            android:inputType="text"
            android:textColorHint="@color/black_alpha2"
            android:textSize="16sp" />
    </RelativeLayout>

    <include layout="@layout/divider_settings" />

    <RelativeLayout
        android:id="@+id/add_address_phone_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/yr_background_main">

        <LinearLayout
            android:id="@+id/add_address_phone_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/add_address_phone_tv"
                style="@style/MyProfile.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="手机号"
                android:textColor="#333333"
                android:textSize="16sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/add_address_phone_ed"
            style="@style/MyProfile.Text"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="2.5dp"
            android:inputType="text"
            android:textColorHint="@color/black_alpha2"
            android:textSize="16sp" />
    </RelativeLayout>

    <include layout="@layout/divider_settings" />

    <RelativeLayout
        android:id="@+id/add_address_prvonice_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/yr_background_main">

        <LinearLayout
            android:id="@+id/add_address_prvonice_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/add_address_prvonice_tv"
                style="@style/MyProfile.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="选择省份"
                android:textColor="#333333"
                android:textSize="16sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/add_address_prvonice_ed"
            style="@style/MyProfile.Text"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="2.5dp"
            android:inputType="text"
            android:textColorHint="@color/black_alpha2"
            android:textSize="16sp" />
    </RelativeLayout>

    <include layout="@layout/divider_settings" />

    <RelativeLayout
        android:id="@+id/add_address_city_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/yr_background_main">

        <LinearLayout
            android:id="@+id/add_address_city_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/add_address_city_tv"
                style="@style/MyProfile.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="选择市区"
                android:textColor="#333333"
                android:textSize="16sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/add_address_city_ed"
            style="@style/MyProfile.Text"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="2.5dp"
            android:inputType="text"
            android:textColorHint="@color/black_alpha2"
            android:textSize="16sp" />
    </RelativeLayout>

    <include layout="@layout/divider_settings" />

    <RelativeLayout
        android:id="@+id/add_address_stree_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/yr_background_main">

        <LinearLayout
            android:id="@+id/add_address_stree_layout_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/add_address_stree_layout_tv"
                style="@style/MyProfile.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="详细地址"
                android:textColor="#333333"
                android:textSize="16sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/add_address_stree_layout_ed"
            style="@style/MyProfile.Text"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="2.5dp"
            android:inputType="text"
            android:textColorHint="@color/black_alpha2"
            android:textSize="16sp" />
    </RelativeLayout>


    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="155dp"
        android:background="#ff0033"
        android:text="保存地址"
        android:textColor="#fff"
        android:textSize="18sp" />
</LinearLayout>