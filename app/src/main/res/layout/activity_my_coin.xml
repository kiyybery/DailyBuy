<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_section_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff0033">

        <LinearLayout
            android:id="@+id/ll_section_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="15px"
            android:paddingLeft="15dp"
            android:paddingRight="30px"
            android:paddingTop="15px">

            <ImageView
                android:id="@+id/iv_section_title_back"
                android:layout_width="12.5dp"
                android:layout_height="20.5dp"
                android:background="@drawable/my_coin_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_section_title_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxEms="9"
            android:singleLine="true"
            android:text="我的积分"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/ll_section_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_section_icon_right"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/icon_home_publish" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_coin_top_layout"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#ff0033">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/my_coin_top_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/my_coin" />

            <LinearLayout
                android:id="@+id/my_coin_top_content_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_coin_top_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总积分："
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/my_coin_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6000"
                    android:textColor="#fff"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="122dp"
            android:layout_height="122dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/action_roll_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mycoin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:text="600"
                android:textColor="#999999"
                android:textSize="28sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="今日积分"
                android:textColor="#999999"
                android:textSize="20sp" />

        </LinearLayout>

        <!--<TextView
            android:id="@+id/mycoin_tv"
            android:layout_width="122dp"
            android:layout_height="122dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/action_roll_background"
            android:gravity="center"
            android:lines="2"
            android:text="@string/my_coin_text"
            android:textColor="#999999"
            android:textSize="28sp" />-->

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="积分赚取攻略"
            android:textColor="#333333"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/right_img"
            android:layout_width="10.5dp"
            android:layout_height="17.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/my_right_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="积分赚取攻略"
            android:textColor="#ff0033"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_red"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="获得积分可以到商城换取相应的积分商品"
            android:textColor="#999999"
            android:textSize="16sp" />

    </RelativeLayout>
</LinearLayout>